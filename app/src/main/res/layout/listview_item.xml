<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listViewItemLayout"
    >

    <TextView
        android:id="@+id/dayListviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="päivä tähän"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/locationListviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_border"
        android:text="Työmaa"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayListviewTextView"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/hoursListviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_border"
        android:text="Tunnit"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationListviewTextView"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/commuteListviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_border"
        android:text="Distance"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hoursListviewTextView"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />
    <TextView
        android:id="@+id/carListviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_border"
        android:text="Ajoneuvo"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commuteListviewTextView"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <Button
        android:id="@+id/editButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:text="Muokkaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carListviewTextView"
        android:backgroundTint="#effbec"



        />
    <Button
        android:id="@+id/copyButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Kopioi"
        app:layout_constraintTop_toBottomOf="@+id/carListviewTextView"
        app:layout_constraintLeft_toRightOf="@id/editButton"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#effbec"

        />
    <Button
        android:id="@+id/pasteButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Liitä"
        app:layout_constraintTop_toBottomOf="@+id/carListviewTextView"
        app:layout_constraintLeft_toRightOf="@id/copyButton"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#effbec"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
