<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="päivä tähän"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/dayTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Työmaa/sijainti"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/dayTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/locationTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/locationTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:hint="Työmaa/sijainti"
        android:id="@+id/locationEditText"
        android:background="@drawable/edittext_border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Työmatkan pituus 1 suunta(km)"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/locationEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/distanceTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/distanceTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:hint="00"
        android:id="@+id/distanceEditText"
        android:background="@drawable/edittext_border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Työtunnit"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/distanceEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/workHoursTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="134dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workHoursTextView"
        android:id="@+id/workHoursSpinner"
        android:layout_marginLeft="5dp"
        style="@android:style/Widget.Holo.Light.Spinner"

        android:layout_marginStart="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/distanceEditText"
        app:layout_constraintLeft_toRightOf="@id/workHoursSpinner"
        android:id="@+id/carTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="134dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/workHoursSpinner"
        app:layout_constraintTop_toBottomOf="@id/workHoursTextView"
        android:id="@+id/carSpinner"
        android:layout_marginLeft="5dp"
        style="@android:style/Widget.Holo.Light.Spinner"

        android:layout_marginStart="5dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/saveButton"
        app:layout_constraintTop_toBottomOf="@+id/carSpinner"
        android:layout_marginTop="20dp"
        android:text="Tallenna"
        />

</androidx.constraintlayout.widget.ConstraintLayout>